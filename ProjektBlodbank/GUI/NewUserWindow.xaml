<Window x:Class="ProjektBlodbank.GUI.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektBlodbank.GUI"
        mc:Ignorable="d"
        Title="ProjectBlodBank - Ny bruger" Height="270" Width="400">
    <Grid>
        <StackPanel Margin="15">
            <Label x:Name="UserNameLbl" Content="Brugernavn:"/>
            <TextBox x:Name="UserNameTbx"/>
            <Label x:Name="PasswordLbl" Content="Kodeord:"/>
            <TextBox x:Name="PasswordTbx"/>
            <Label x:Name="RepeatPasswordLbl" Content="Gentag kodeord:"/>
            <TextBox x:Name="RepeatPasswordTbx"/>
            <Label x:Name="EmailLbl" Content="E-mail:"/>
            <TextBox x:Name="EmailTbx"/>
            <Button x:Name="CreateUserBtn" Content="Opret bruger" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="CreateUserBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
